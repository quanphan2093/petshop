<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PetStore</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetStore.styles.css" asp-append-version="true" />*@
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Roboto:wght@700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/tpl/lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/tpl/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/tpl/css/bootstrap.min.css?v=@DateTime.Now.Ticks" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/tpl/css/style.css?v=@DateTime.Now.Ticks" rel="stylesheet">

    <!-- Stylesheet -->
    <link href="~/css/site.css" rel="stylesheet">
</head>
<body>
    <header style="position: sticky; top: 0; right: 0; left: 0; z-index: 9999;">
        <!-- Topbar End -->
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow-sm py-3 py-lg-0 px-3 px-lg-0">
            <a href="index.html" class="navbar-brand ms-lg-5">
                <h1 class="m-0 text-uppercase text-dark"><i class="bi bi-shop fs-1 text-primary me-3"></i>Pet Shop</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="/Home" class="nav-item nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/Home"? "active" : "")">Trang Chủ</a>
                    <a href="/About" class="nav-item nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/About"? "active" : "")">Giới thiệu</a>
                    <a href="/Service" class="nav-item nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/Service"? "active" : "")">Dịch Vụ</a>
                    <a href="/Product" class="nav-item nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/Product"? "active" : "")">Sản Phẩm</a>
                    <a href="/Blog" class="nav-item nav-link @((ViewContext.RouteData.Values["page"].ToString() == "/Customer/Blog" || ViewContext.RouteData.Values["page"].ToString() == "/Customer/BlogDetail")? "active" : "")">Blog</a>
                    @if (Context.Session.GetInt32("acc") == null)
                    {
                        <a href="/Login" class="nav-item nav-link @((ViewContext.RouteData.Values["page"].ToString() == "/Common/Login" )? "active" : "")">Đăng nhập</a>
                    }
                    else
                    {
                        <a href="/Profile" class="nav-item nav-link @((ViewContext.RouteData.Values["page"].ToString() == "/Profile" )? "active" : "")">Xin Chào @Context.Session.GetString("email")</a>
                    }
                    <a href="/Contact" class="nav-item nav-link nav-contact bg-primary text-white px-5 ms-lg-5">Liên Hệ <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container-fluid bg-light mt-5 py-5">
            <div class="container pt-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-uppercase border-start border-5 border-primary ps-3 mb-4">Liên hệ</h5>
                        <p class="mb-2"><i class="bi bi-geo-alt text-primary me-2"></i>FPT University</p>
                        @* <p class="mb-2"><i class="bi bi-envelope-open text-primary me-2"></i>info@example.com</p> *@
                        <p class="mb-0"><i class="bi bi-telephone text-primary me-2"></i>0396925536</p>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-uppercase border-start border-5 border-primary ps-3 mb-4">Liên kết nhanh</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-body mb-2" href="/Home"><i class="bi bi-arrow-right text-primary me-2"></i>Trang Chủ</a>
                            <a class="text-body mb-2" href="/About"><i class="bi bi-arrow-right text-primary me-2"></i>Giới thiệu</a>
                            <a class="text-body mb-2" href="/Service"><i class="bi bi-arrow-right text-primary me-2"></i>Dịch vụ</a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-uppercase border-start border-5 border-primary ps-3 mb-4">Liên kết phổ biến</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-body mb-2" href="/Home"><i class="bi bi-arrow-right text-primary me-2"></i>Trang Chủ</a>
                            <a class="text-body mb-2" href="/About"><i class="bi bi-arrow-right text-primary me-2"></i>Giới thiệu</a>
                            <a class="text-body mb-2" href="/Service"><i class="bi bi-arrow-right text-primary me-2"></i>Dịch vụ</a>
                            <a class="text-body" href="#"><i class="bi bi-arrow-right text-primary me-2"></i>Liên hệ</a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-uppercase border-start border-5 border-primary ps-3 mb-4">Newsletter</h5>
                        <form action="/Home" method="post">
                            <div class="input-group">
                                <input type="text" class="form-control p-3" placeholder="Your Email" name="email">
                                <button type="submit" class="btn btn-primary">Sign Up</button>
                            </div>
                        </form>
                        <h6 class="text-uppercase mt-4 mb-3">Follow Us</h6>
                        <div class="d-flex">
                            <a class="btn btn-outline-primary btn-square me-2" href="#"><i class="bi bi-twitter"></i></a>
                            <a class="btn btn-outline-primary btn-square me-2" href="#"><i class="bi bi-facebook"></i></a>
                            <a class="btn btn-outline-primary btn-square me-2" href="#"><i class="bi bi-linkedin"></i></a>
                            <a class="btn btn-outline-primary btn-square" href="#"><i class="bi bi-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <a href="#" class="btn btn-primary py-3 fs-4 back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/tpl/lib/easing/easing.min.js"></script>
    <script src="~/tpl/lib/waypoints/waypoints.min.js"></script>
    <script src="~/tpl/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/tpl/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>