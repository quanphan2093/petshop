<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PetStore</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetStore.styles.css" asp-append-version="true" />*@
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Roboto:wght@700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/tpl/lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/tpl/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/tpl/css/bootstrap.min.css?v=@DateTime.Now.Ticks" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/tpl/css/style.css?v=@DateTime.Now.Ticks" rel="stylesheet">

    <!-- Stylesheet -->
    <link href="~/css/site.css" rel="stylesheet">
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .navbar-nav .nav-link {
            position: relative;
        }

            .navbar-nav .nav-link.active::before{
                top: -20px ;
            }
            .navbar-nav .nav-link.active::after {
                content: '';
                position: absolute;
                bottom: 3px;
                left: 0;
                width: 100%;
                height: 3px;
                background-color: #0056b3;
            }

            .navbar-nav .nav-link:hover::after {
                content: '';
                position: absolute;
                bottom: 3px;
                left: 0;
                width: 100%;
                height: 3px;
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <header style="position: sticky; top: 0; right: 0; left: 0; z-index: 9999; background-color: #ffcd16; height: 80px;">
        <nav class="navbar navbar-expand-lg navbar-light py-0 px-4" style="height: 100%;">
            <!-- Logo thương hiệu -->
            <a href="index.html" class="navbar-brand d-flex align-items-center" style="margin-left: 70px;">
                @*<h3 class="m-0 text-uppercase" style="color: #0056b3; font-weight: bold;">FUR </br> <span style="color: #0000FF;">FRIENDS</span></h3>*@
                <img src="~/Images/Slice 3.png" width="124px" />
            </a>
            <!-- Nút toggle (mobile view) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Menu chính -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/Home" class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/Home"? "active" : "")" style="color: #085998;">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Forum" class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/Forum"? "active" : "")" style="color: #085998;">Diễn Đàn</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Product" class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/Product"? "active" : "")" style="color: #085998;">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Blog" class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/Blog"? "active" : "")" style="color: #085998;">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a href="/About" class="nav-link @(ViewContext.RouteData.Values["page"].ToString() == "/Customer/About"? "active" : "")" style="color: #085998;">Giới thiệu</a>
                    </li>
                </ul>
            </div>
            <!-- Phần giỏ hàng và đăng nhập -->
            <div class="d-flex align-items-center" style="margin-right: 70px;">
                <a href="/Cart" class="btn btn-primary me-2" style="background-color: #0056b3; border-color: #0056b3; border-radius:50px;">
                    <i class="bi bi-cart"></i>
                </a>
                @if (Context.Session.GetInt32("acc") == null)
                {
                    <a href="/Login" class="btn btn-primary" style="background-color: #0056b3; border-color: #0056b3;border-radius:50px;">Đăng nhập</a>
                }
                else
                {
                    <div class="dropdown">
                        <a href="#" class="btn btn-primary me-2 dropdown-toggle" style="background-color: #0056b3; border-color: #0056b3; border-radius:50px;"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i>
                        </a>
                        <!-- Danh sách menu -->
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">🔔 Thông báo</a></li>
                            <li><a class="dropdown-item" href="/Profile">👤 Hồ sơ</a></li>
                            <li><a class="dropdown-item" href="/Order">🛒 Đơn mua</a></li>
                        </ul>
                    </div>
                     @* <a href="/Profile" class="btn btn-primary" style="background-color: #0056b3; border-color: #0056b3;">
                         Xin Chào @Context.Session.GetString("email")
                     </a> *@
                }
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="mt-5" style="background-color:#ffcd16; height:30px; width:100%;"></div>
        <div class="container-fluid  py-5" style="background-color:#fff1d7;">
            <div class="container pt-5">
                <div class="row g-5">
                    <div class="col-lg-4 col-md-6 " style="color:#667479">
                        <h5 class="text-uppercase border-5 border-primary mb-4" style="color:#085998;">Liên hệ</h5>
                        <p class="mb-2"><i class="bi bi-geo-alt me-2 fs-4"></i><span style="margin:0 0 5px 3px;">FPT University</span></p>
                        <p class="mb-2"><i class="bi bi-envelope me-2 fs-4"></i>info@example.com</p>
                        <p class="mb-0"><i class="bi bi-telephone me-2 fs-4"></i>0396925536</p>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h5 class="text-uppercase border-5 border-primary mb-4" style="color:#085998">Liên kết phổ biến</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-body mb-2" href="/Home"><span style="margin-right:13px;">></span>Trang Chủ</a>
                            <a class="text-body mb-2" href="/Forum"><span style="margin-right:13px;">></span>Diễn Đàn</a>
                            <a class="text-body mb-2" href="/Service"><span style="margin-right:13px;">></span>Dịch vụ</a>
                            <a class="text-body mb-2" href="/Product"><span style="margin-right:13px;">></span>Sản phẩm</a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 text-center">
                        @*<h3 class="text-uppercase">FUR</br><span>friends</span></h3>*@
                        <img src="~/Images/Slice 1.png"></img>
                        <div class="text-center fs-3">
                            <i class="bi bi-facebook" style="color:#085998"></i>
                            <i class="bi bi-instagram" style="margin:0 25px; color:#085998"></i>
                            <i class="bi bi-youtube" style="color:#085998"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="errorModalLabel">Error</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@TempData["error"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @if (TempData["error"] != null)
    {
        <script>
            $(document).ready(function () {
                $('#errorModal').modal('show');
            });
        </script>
    }
    <a href="#" class="btn btn-primary py-3 fs-4 back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/tpl/lib/easing/easing.min.js"></script>
    <script src="~/tpl/lib/waypoints/waypoints.min.js"></script>
    <script src="~/tpl/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/tpl/js/main.js?v=@DateTime.Now.Ticks"></script>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/productDetailScript.js?v=@DateTime.Now.Ticks"></script>
    <script src="~/js/productScript.js?v=@DateTime.Now.Ticks"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>