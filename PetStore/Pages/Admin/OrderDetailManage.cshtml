@page "/Admin/OrderDetail/{id}"
@model PetStore.Pages.Admin.OrderDetailManageModel
@{
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="layout-specing">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-4">
                <h5 class="mb-0">Đơn Hàng</h5>
                <nav aria-label="breadcrumb" class="d-inline-block mt-2">
                    <ul class="breadcrumb breadcrumb-muted bg-transparent rounded mb-0 p-0">
                        <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chi tiết đơn Hàng</li>
                    </ul>
                </nav>
            </div><!--end col-->
        </div><!--end row-->

        <div class="row">
            <div class="col-12 mt-4">
                <div class="table-responsive bg-white shadow rounded">
                    <table class="table mb-0 table-center">
                        <thead>
                            <tr>
                                <th class="border-bottom p-3" style="min-width: 50px;">#</th>
                                <th class="border-bottom p-3" style="min-width: 180px;">Sản Phẩm</th>
                                <th class="border-bottom p-3" style="min-width: 150px;">Ngày tạo</th>
                                <th class="border-bottom p-3" style="min-width:150px;">Số lượng</th>
                                <th class="border-bottom p-3" style="min-width:150px;">Giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.orderDetails)
                            {
                                <tr>
                                    <th class="p-3">@i.OrderDetailId</th>
                                    <td class="p-3">
                                        <a href="#" class="text-dark">
                                            <div class="d-flex align-items-center">
                                                <img src="@i.Product.Image" class="avatar avatar-md-sm rounded-circle shadow" alt="">
                                                <span class="ms-2">@i.Product.ProductName</span>
                                            </div>
                                        </a>
                                    </td>
                                    <td class="p-3">@i.CreateAt</td>
                                    <td class="p-3">@i.Quantity</td>
                                    <td class="p-3">@i.UnitPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                </div>
                <div style="float:right">
                    <p style="color:red; font-size:25px">Tổng: @Model.Total</p>
                </div>
            </div>
        </div><!--end row-->
    </div>
</div><!--end container-->

