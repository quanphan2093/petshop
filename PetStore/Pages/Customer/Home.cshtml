@page "/Home"
@model PetStore.Pages.Customer.HomeModel
@{
    Layout = "_Layout";
}
@using System.Globalization
<link href="~/css/home.css" rel="stylesheet" />
<style>
    .image-container {
        position: relative;
        width: 100%;
        margin: 0 auto;
    }

        .image-container img {
            width: 100%;
            height: auto;
            display: block;
        }

    .button-container {
        position: absolute;
        top: 82%;
        left: 80%;
        transform: translate(-50%, -50%);
        display: flex;
        gap: 10px;
    }

        .button-container button {
            border-radius: 20px;
            padding: 8px 15px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

    .btn-view-intro {
        background-color: #ffcd16;
        border: #085998 2px solid;
        color: #085998;
        text-wrap: nowrap;
    }

        .btn-view-intro a {
            text-decoration: none;
            color: inherit;
        }

        .btn-view-intro i {
            border-radius: 50%;
            border: 1px solid #085998;
            padding: 0 3px;
        }

    .btn-discover {
        background-color: #085998;
        color: #ffffff;
        border: none;
        text-wrap: nowrap;
    }

        .btn-discover a {
            text-decoration: none;
            color: inherit;
        }
</style>

<div class="banner-container">
    <div class="image-container">
        <img src="~/Images/bannerHome.png" width="100%">
    </div>
</div>

<div class="container mt-4">
    <div style="display: flex; justify-content: space-between;">
        <div>
            <p style="opacity: 0.6;margin: 0;">Có gì mới ?</p>
            <h6 style="color: #085998; font-size: 20px; font-weight: 700;">Một Vài Em Pet Của Chúng Ta</h6>
        </div>
        <button style="border: none; background-color: #085998;height: 40px; border-radius: 50px;">
            <a style="color: #ffffff;padding: 2px 15px" href="/forum">
                Diễn Đàn
                <span style="margin-left: 5px; border-radius: 50%; border: 1px solid #ffffff; padding: 0 5px;">></span>
            </a>
        </button>
    </div>
    <div class="row">
        @if(Model.forums != null)
        {
            @foreach (var i in Model.forums.Take(8))
            {
                <div class="col-md-6 col-lg-3 col-sm-12">
                    <div class="shadow" style="border-radius: 12px; width: 95%; padding: 10px; text-align: center;">
                        <div style="width: 200px; height: 200px; margin: 0 auto;">
                            <img src="@i.Image"
                                 style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px; margin-top: 10px;" />
                        </div>
                        <h5 class="text-center" style="margin-top: 10px;">@i.Content</h5>
                        <p class="text-center" style="opacity: 0.6; padding-bottom: 10px;">
                            Gene: <span style="font-weight: bold;">@(i.Gene == true ? "Male" : "Female")</span>
                            <i class="bi bi-dot"></i>
                            Age: <span style="font-weight: bold;">@i.Age months</span>
                        </p>
                    </div>

                </div>
            }
        }
    </div>
    <div class="image-container">
        <img src="~/Images/Slice .png" alt="Example Image" />
        <div class="button-container">
            <button class="btn-view-intro">
                <a href="#">View Intro <i class="bi bi-caret-right-fill"></i></a>
            </button>
            <button class="btn-discover">
                <a href="#">Khám Phá</a>
            </button>
        </div>
    </div>
    <div class="row mt-4">
        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
            <div>
                <p style="opacity: 0.6;margin: 0;">Hard to choose right products for pets?</p>
                <h6 style="color: #085998; font-size: 22px; font-weight: 700;">Sản Phẩm Của Chúng Tôi</h6>
            </div>
            <button style="border: none; background-color: #ffffff;height: 40px; border-radius: 50px; border: 2px solid #085998;">
                <a style="color: #085998;padding: 2px 15px" href="/Product">
                    Xem thêm
                    <span style="margin-left: 5px; border-radius: 50%; border: 1px solid #085998; padding: 0 5px;">></span>
                </a>
            </button>
        </div>
        @if(Model.products != null)
        {
            @foreach (var i in Model.products.Take(8))
            {
                <div class="col-md-6 col-lg-3 col-sm-12 text-center mt-3"
                     style="display: flex; justify-content: center; align-items: center; height: 100%;">
                    <div class="shadow mt-3" style="border-radius: 12px; width: 92%; text-align: center; padding: 10px;">
                        <a href="/Product/ProductDetails?id=@i.ProductId" style="text-decoration: none; color: inherit; display: block;">
                            <div style="width: 200px; height: 200px; margin: 0 auto;">
                                <img src="@i.Image"
                                     style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;" />
                            </div>
                            <h6 class="text-start mt-4" style="margin-left: 10px; font-weight: bold;">
                                @i.ProductName
                            </h6>
                            <p class="text-start" style="margin-left: 10px; font-size: 13px; color:black">
                                Product: <span style="font-weight: bold;">@i.Category.CategoryName</span><br />
                                Size: <span style="font-weight: bold;">@i.Size gam</span>
                            </p>
                            <h6 class="text-start" style="margin-left: 10px;">@(((int)i.Price).ToString("N0", CultureInfo.InvariantCulture)) VND</h6>
                        </a>
                        <button class="text-start"
                                style="background-color: #fceed5; border: none; border-radius: 8px; width: 93%; margin-top: 10px;
                   color: #085998; font-weight: bold; padding: 0 10px; margin-bottom: 10px;">
                            <img src="~/Images/Frame.png" /><i class="bi bi-dot"></i> Free Toy & Free Shaker
                        </button>
                    </div>

                </div>
            }
        }
    </div>
    <div class="row mt-5">
        <div class="col-5 col-md-5 text-center">
            <img src="~/Images/31c10c20d326b9ab4937a675d0a9bcd6 1.png" width="90%" />
        </div>
        <div class="col-7 col-md-7" style="position: relative; padding-bottom: 50px;">
            <h3 style="font-size: 40px; font-weight: bold; color: #085998;">Giới thiệu</h3>
            <h4 style="margin: 25px 0; color: #085998; font-weight: bold;">Giữ thú cưng của bạn luôn vui vẻ</h4>
            <p style="color: #085998; font-size: 18px;">
                Having a pet means you have more joy, a new friend, a happy person who will always be with you to
                have fun. We have 200+ different pets that can meet your needs! Having a pet means you have more
                joy, a new friend, a happy person who will always be with you to have fun. We have 200+ different
                pets that can meet your needs!
            </p>
            <button style="background-color: #085998; color: #ffffff; border-radius: 20px; padding: 8px 30px; border: none; position: absolute; bottom: 0; right: 0;">
                Xem Thêm >
            </button>
        </div>
    </div>
</div>